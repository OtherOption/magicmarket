#cloud-config
users:
  - name: sysTom
    ssh-authorized-keys:
      - ssh-rsa  thomascarroll@Toms-MBP.lan
    sudo: ['ALL=(ALL) NOPASSWD:ALL']
    groups: sudo
    shell: /bin/bash
runcmd:
  - sed -i -e '/^Port/s/^.*$/Port 4666/' /etc/ssh/sshd_config
  - sed -i -e '/^PermitRootLogin/s/^.*$/PermitRootLogin no/' /etc/ssh/sshd_config
  - sed -i -e '$aAllowUsers sysTom' /etc/ssh/sshd_config
  - restart ssh